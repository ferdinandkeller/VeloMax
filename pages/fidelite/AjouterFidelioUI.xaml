<Page
    x:Class="VéloMax.pages.AjouterFidelioUI"
    xmlns:local="using:VéloMax.pages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Margin="25">
        <TextBlock Text="Fidelio :" Margin="0 0 0 25" Style="{ThemeResource SubheaderTextBlockStyle}"/>
        <ComboBox Name="ClientCombo" Header="Client :" PlaceholderText="Client à fidéliser" Width="300" Margin="0 0 0 25" />
        <ComboBox Name="ProgrammeCombo" Header="Programme :" PlaceholderText="Programme choisit" Width="300" Margin="0 0 0 25" />
        <TextBox Name="dateAdherence" Header="Date d'adhérence :" Width="300" HorizontalAlignment="Left" Margin="0 0 0 25"/>
        <Button Content="Ajouter le client au programme" Click="AjoutProgramme" Background="#A1573A" Foreground="White"/>
    </StackPanel>
</Page>
    
