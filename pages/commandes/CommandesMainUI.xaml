<Page
    x:Class="VéloMax.pages.CommandesMainUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView Name="NavViewCommandes" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" IsBackEnabled="False" IsSettingsVisible="False" SelectionChanged="NavView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Name="NavViewCommandes_Default" Tag="commandesEncours" Content="Commandes en cours"/>
                <NavigationViewItem Tag="commandesEnvoyee" Content="Commandes envoyées" />
            </NavigationView.MenuItems>
            
            <Frame Name="NavigationContentFrame"></Frame>
        </NavigationView>
    </Grid>
</Page>
